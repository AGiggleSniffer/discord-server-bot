{
	"tasks": {
		"dev": "deno run --watch main.ts",
		"start": "deno run --allow-read --allow-net --allow-env --env-file main.ts",
		"scripts": "deno run --allow-read --allow-net --allow-env --env-file deploy_scripts.js"
	},

	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"uuid": "jsr:@std/uuid",

		"core": "npm:@langchain/core",
		"ollama": "npm:@langchain/ollama",
		"langgraph": "npm:@langchain/langgraph",

		"zod": "npm:zod",
		"compose": "npm:docker-compose",
		"discord": "npm:discord.js",

		"discord.d.ts": "./discord.d.ts",
		"llm": "./src/llm/main.ts"
	},

	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
